<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChoiceActivity"
    android:background="@drawable/gradient">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choice_tv"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginTop="60dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/choice_tv"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/geometry_linear"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/geometry_card"
        android:layout_margin="8dp"
        android:elevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#484A62"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/geometry"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/figures"/>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_linear"
        android:orientation="vertical"
        android:layout_weight="1">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:id="@+id/function_card"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="#484A62">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/functions_tv"
            android:text="@string/functions"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/functions_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/functions_tv"
            android:src="@drawable/Function"
            />

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>